<div class="cg-container" style="background-color: #0c0c0c">
  <div class="home-navbar-bg">
    <div class="bg-content container">
      <div class="bg-bar"></div>
      <div class="bg-title">CERTIFIED GENIUS CORP(ASIA)</div>
      <div class="bg-text">
        <%= t 'home.bg_text_1' %><span class="bg-text-spacer"><%= t 'home.bg_text_2' %></span>
      </div>
      <div class="bg-icons">
        <span style="margin-right: 20px">
          <a href="https://www.facebook.com/CGASIATEAM/" target="_blank">
            <%= image_tag 'home/facebook_icon.png', height: 36 %>
          </a>
        </span>
        <span>
          <a href="https://twitter.com/CGASIATEAM" target="_blank">
          <%= image_tag 'home/twitter_icon.png', height: 36 %>
          </a>
        </span>
      </div>
    </div>
  </div>
  <div style="background-color: #191B1F">
    <div class="container">
      <div class="home-spacer"></div>
      <div class="row">
        <div class="col-lg-3 home-intro-title">
          <%= t 'home.a_intro_title_1' %>
          <span class="text-nowrap">CG-ASIA</span>
        </div>
        <div class="home-intro-spacer"></div>
        <div class="col-lg-8 home-intro-content">
          <%= t 'home.a_intro_content' %>
        </div>
      </div>
      <div class="row">
        <div class="home-intro-spacer" style="border: none"></div>
        <div class="col-lg-3 offset-lg-3" style="margin-top: 30px">
          <a href="/cg_asia">
            <%= image_tag 'home/home_know_more.svg', class: 'home_know_more' %>
          </a>
        </div>
      </div>
      <div class="home-spacer"></div>
      <div class="row">
        <div class="col-lg-3 home-intro-title">WSOP ASIA</div>
        <div class="home-intro-spacer"></div>
        <div class="col-lg-8 home-intro-content">
          <%= t 'home.b_intro_content' %>
        </div>
      </div>
      <div class="home-spacer"></div>
      <div class="home-spacer d-lg-none"></div>

      <div class="row home-jump-items">
        <div class="col-lg-4 home-jump-item">
          <a href="#">
            <%= image_tag 'home/event_zone.jpg' %>
            <div><%= t 'home.a_home_jump_item' %></div>
          </a>
        </div>
        <div class="col-lg-4 home-jump-item">
          <a href="/news">
            <%= image_tag 'home/latest_news.jpg' %>
            <div><%= t 'home.b_home_jump_item' %></div>
          </a>
        </div>
        <div class="col-lg-4 home-jump-item">
          <a href="/online_pokers">
            <%= image_tag 'home/online_poker.png' %>
            <div><%= t 'home.c_home_jump_item' %></div>
          </a>
        </div>
      </div>
      <div class="home-spacer"></div>
    </div>
  </div>
</div>





