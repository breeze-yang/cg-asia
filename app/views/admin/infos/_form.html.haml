= semantic_form_for [:admin, @info] do |f|
  = f.semantic_errors *f.object.errors.keys
  = f.inputs do
    = f.input :title
    = f.input :intro
    = f.input :image
    = f.input :published
    ~ f.input :main_body
  = f.submit data: { disable_with: '请稍等...' }

:javascript
    $(function() {
        cgEditor.call($("#info_main_body"), $('form.info'));
    });