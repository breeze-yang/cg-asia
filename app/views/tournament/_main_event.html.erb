<div id="main_event" class="tab-pane fade">
  <div class="container main-event-label d-none">
    <%= t 'tour.main_event' %>.
    <span class="main-event-pdf-download float-right">
      <a href="<%= @main_event.event_pdf_url %>" target="_blank">
        <%= image_tag 'download.png', height: 20 %>
        <%= @main_event.pdf_name %>
      </a>
    </span>
  </div>
  <div class="container">
    <ul class="nav nav-main-event nav-justified" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="pill" href="#schedule">
          <%= t 'tour.schedule' %>
        </a>
      </li>
      <li class="spacer"></li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="pill" href="#structure">
          <%= t 'tour.structure' %>
        </a>
      </li>
      <li class="spacer"></li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="pill" href="#prize">
          <%= t 'tour.prize' %>
        </a>
      </li>
      <li class="spacer"></li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="pill" href="#location">
          <%= t 'tour.location' %>
        </a>
      </li>
    </ul>
  </div>

  <!-- Tab panes -->
  <div class="tab-content">
    <%= render 'main_event_schedule' %>
    <div id="structure" class="container tab-pane fade"><br>
      <div class="row">
        <div class="col-lg-6 gc-html-container">
          <%= sanitize @main_event.structure_desc %>
        </div>
        <div class="col-lg-6 tour-table structure-table">
          <table class="table">
            <thead>
            <tr>
              <th>Level</th>
              <th>Ante</th>
              <th>Blinds</th>
            </tr>
            </thead>
            <tbody>
            <% @main_event.event_structures.each do |structure| %>
              <tr>
                <%= render_structure_tds(structure).html_safe %>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%= render 'main_event_prize' %>

    <div id="location" class="container tab-pane fade gc-html-container"><br>
      <%= sanitize @main_event.location_desc %>
    </div>
  </div>
</div>

